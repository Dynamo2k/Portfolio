---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div class="card">
  <h3 class="text-lg font-semibold text-text-primary mb-4">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {items.map((item) => (
      <span class="text-sm px-3 py-1.5 bg-bg-elevated rounded-lg text-text-secondary hover:text-accent-primary hover:bg-accent-primary/10 transition-colors cursor-default">
        {item}
      </span>
    ))}
  </div>
</div>
