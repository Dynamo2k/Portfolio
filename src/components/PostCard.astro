---
interface Props {
  title: string;
  description: string;
  date: Date;
  category: string;
  tags: string[];
  image?: string;
  slug: string;
  collection: string;
}

const { title, description, date, category, tags, image, slug, collection } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const href = `/${collection}/${slug}/`;
---

<a href={href} class="post-card-link">
  <article class="post-card">
    {image && (
      <div class="card-image">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}
    <div class="post-content">
      <div class="card-meta">
        <span class="category-badge">{category}</span>
        <span class="date">{formattedDate}</span>
      </div>
      <h3>{title}</h3>
      <p class="description">{description}</p>
      <div class="tags">
        {tags.slice(0, 4).map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
      <span class="read-more">Read More â†’</span>
    </div>
  </article>
</a>

<style>
  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .post-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 300ms ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-primary);
    box-shadow: 0 8px 24px rgba(0, 255, 159, 0.1);
  }

  .card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: var(--bg-elevated);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 300ms ease;
  }

  .post-card:hover .card-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .category-badge {
    display: inline-block;
    background: var(--bg-elevated);
    color: var(--accent-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .date {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  h3 {
    color: var(--text-heading);
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .description {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    flex: 1;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--bg-hover);
    color: var(--text-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .read-more {
    color: var(--accent-primary);
    font-size: 0.9rem;
    font-weight: 600;
    margin-top: auto;
  }

  .post-card:hover .read-more {
    color: var(--accent-secondary);
  }
</style>
