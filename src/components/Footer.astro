---
import { SITE, SOCIAL_LINKS } from '../utils/constants';
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-grid">
      <div class="footer-brand">
        <h3>{SITE.author}</h3>
        <p>{SITE.headline}</p>
        <p class="footer-desc">Building security tools and sharing knowledge in cybersecurity.</p>
      </div>

      <div class="footer-links">
        <h4>Quick Links</h4>
        <a href="/blog/">Blog</a>
        <a href="/projects/">Projects</a>
        <a href="/ctf/">CTF Writeups</a>
        <a href="/about/">About</a>
        <a href="/contact/">Contact</a>
      </div>

      <div class="footer-links">
        <h4>Connect</h4>
        <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer">GitHub</a>
        <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href={SOCIAL_LINKS.tryhackme} target="_blank" rel="noopener noreferrer">TryHackMe</a>
        <a href={SOCIAL_LINKS.blog} target="_blank" rel="noopener noreferrer">WordPress Blog</a>
        <a href={`mailto:${SOCIAL_LINKS.email}`}>Email</a>
      </div>

      <div class="footer-links">
        <h4>Resources</h4>
        <a href="/resume/">Resume</a>
        <a href={SITE.resumeFile} download>Download CV</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>Â© {new Date().getFullYear()} {SITE.author}. All rights reserved.</p>
      <p class="footer-tagline">Securing the digital world, one project at a time.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-subtle);
    margin-top: 4rem;
    padding: 3rem 0 1.5rem;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-brand h3 {
    color: var(--text-heading);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .footer-brand p {
    color: var(--accent-primary);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .footer-desc {
    color: var(--text-secondary) !important;
    font-size: 0.85rem !important;
    line-height: 1.6;
  }

  .footer-links h4 {
    color: var(--text-heading);
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .footer-links a {
    display: block;
    color: var(--text-secondary);
    font-size: 0.9rem;
    padding: 0.3rem 0;
    transition: color 200ms ease;
  }

  .footer-links a:hover {
    color: var(--accent-primary);
  }

  .footer-bottom {
    border-top: 1px solid var(--border-subtle);
    padding-top: 1.5rem;
    text-align: center;
  }

  .footer-bottom p {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .footer-tagline {
    color: var(--text-muted);
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
