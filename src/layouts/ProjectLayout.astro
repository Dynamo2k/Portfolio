---
import BaseLayout from './BaseLayout.astro';
import { SITE } from '../utils/constants';

interface Props {
  title: string;
  description?: string;
  tagline?: string;
  date?: Date | string;
  category?: string;
  tags?: string[];
  tech?: string[];
  image?: string;
  github?: string;
  stars?: number;
}

const { title, description, tagline, date, category = '', tags, tech, image, github, stars = 0 } = Astro.props;
const projectDescription = description || tagline || title;
const projectTags = tags || tech || [];

const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}) : '';
---

<BaseLayout title={`${title} | ${SITE.author}`} description={projectDescription} image={image}>
  <article class="project-container">
    <header class="project-header">
      <a href="/projects/" class="back-link">← Back to Projects</a>
      <div class="project-meta">
        {category && <span class="category-badge">{category}</span>}
        {formattedDate && <span class="date">{formattedDate}</span>}
        {stars > 0 && <span class="stars">★ {stars}</span>}
      </div>
      <h1>{title}</h1>
      <p class="project-description">{projectDescription}</p>
      <div class="project-tags">
        {projectTags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
      {github && (
        <a href={github} target="_blank" rel="noopener noreferrer" class="github-link">
          View on GitHub →
        </a>
      )}
    </header>

    {image && (
      <div class="project-image">
        <img src={image} alt={title} />
      </div>
    )}

    <div class="prose">
      <slot />
    </div>

    <footer class="project-footer">
      <div class="resume-banner">
        <p>Interested in my work?</p>
        <div class="footer-actions">
          {github && (
            <a href={github} target="_blank" rel="noopener noreferrer" class="btn-secondary">View Source Code</a>
          )}
          <a href={SITE.resumeFile} download class="btn-primary">Download Resume</a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .project-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .project-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .back-link {
    color: var(--text-secondary);
    font-size: 0.9rem;
    display: inline-block;
    margin-bottom: 1.5rem;
    transition: color 200ms ease;
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .category-badge {
    background: var(--bg-elevated);
    color: var(--accent-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .date {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .stars {
    color: var(--warning);
    font-size: 0.9rem;
    font-weight: 600;
  }

  h1 {
    font-size: 2.25rem;
    color: var(--text-heading);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .project-description {
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--bg-hover);
    color: var(--text-secondary);
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .github-link {
    display: inline-block;
    color: var(--accent-primary);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .project-image {
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
  }

  .resume-banner {
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }

  .resume-banner p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .footer-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    .project-container {
      padding: 1rem;
    }
  }
</style>
