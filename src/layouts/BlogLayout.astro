---
import BaseLayout from './BaseLayout.astro';
import { SITE } from '../utils/constants';

interface Props {
  title: string;
  description?: string;
  date?: Date | string;
  category?: string;
  tags?: string[];
  image?: string;
  author?: string;
  readTime?: string;
}

const { title, description = title, date, category = '', tags = [], image, author = 'Rana Uzair Ahmad' } = Astro.props;

const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}) : '';
---

<BaseLayout title={`${title} | ${SITE.author}`} description={description} image={image}>
  <article class="article-container">
    <header class="article-header">
      <a href="/blog/" class="back-link">‚Üê Back to Blog</a>
      <div class="article-meta">
        {category && <span class="category-badge">{category}</span>}
        {formattedDate && <span class="date">{formattedDate}</span>}
      </div>
      <h1>{title}</h1>
      <p class="article-description">{description}</p>
      <div class="article-tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
      <div class="article-author">
        <span>By {author}</span>
      </div>
    </header>

    {image && (
      <div class="article-image">
        <img src={image} alt={title} />
      </div>
    )}

    <div class="prose">
      <slot />
    </div>

    <footer class="article-footer">
      <div class="resume-banner">
        <p>Interested in working together?</p>
        <a href={SITE.resumeFile} download class="btn-primary">Download My Resume</a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .article-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .back-link {
    color: var(--text-secondary);
    font-size: 0.9rem;
    display: inline-block;
    margin-bottom: 1.5rem;
    transition: color 200ms ease;
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .category-badge {
    background: var(--bg-elevated);
    color: var(--accent-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .date {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  h1 {
    font-size: 2.25rem;
    color: var(--text-heading);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .article-description {
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--bg-hover);
    color: var(--text-secondary);
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .article-author {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .article-image {
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
  }

  .resume-banner {
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }

  .resume-banner p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    .article-container {
      padding: 1rem;
    }
  }
</style>
