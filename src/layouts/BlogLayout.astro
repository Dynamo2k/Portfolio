---
import BaseLayout from './BaseLayout.astro';
import { SITE } from '../utils/constants';

interface Props {
  title: string;
  description?: string;
  date?: Date | string;
  category?: string;
  tags?: string[];
  image?: string;
  imageAlt?: string;
  imagePrompt?: string;
  author?: string;
  readTime?: string;
  difficulty?: string;
}

const { title, description = title, date, category = '', tags = [], image, imageAlt, imagePrompt, author = 'Rana Uzair Ahmad', readTime, difficulty } = Astro.props;

const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}) : '';
---

<BaseLayout title={`${title} | ${SITE.author}`} description={description} image={image}>
  <article class="blog-post">
    <header class="blog-header">
      <a href="/blog/" class="back-link">‚Üê Back to Blog</a>

      <div class="blog-meta">
        {category && <span class="category">{category}</span>}
        {formattedDate && <time>{formattedDate}</time>}
        {readTime && <span class="read-time">{readTime}</span>}
        {difficulty && <span class="difficulty">{difficulty}</span>}
      </div>

      <h1>{title}</h1>
      <p class="blog-description">{description}</p>

      <div class="tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>

      <div class="article-author">
        <span>By {author}</span>
      </div>

      {image && (
        <img
          src={image}
          alt={imageAlt || title}
          class="featured-image"
        />
      )}
    </header>

    <div class="blog-content prose">
      <slot />
    </div>

    {imagePrompt && (
      <div class="ai-image-prompt">
        <h2>AI Image Generation Prompt</h2>
        <p>Generate an illustration for this blog using:</p>
        <pre><code>{imagePrompt}</code></pre>
        <p class="tools">Try: DALL-E 3, Midjourney, Stable Diffusion, or Leonardo AI</p>
      </div>
    )}

    <footer class="article-footer">
      <div class="resume-banner">
        <p>Interested in working together?</p>
        <a href={SITE.resumeFile} download class="btn-primary">Download My Resume</a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .blog-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    transition: color 200ms ease;
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  .blog-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .category {
    background: var(--accent-primary);
    color: #000;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  time {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .read-time, .difficulty {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .blog-header h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
    line-height: 1.2;
  }

  .blog-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--bg-elevated);
    color: var(--text-secondary);
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.875rem;
  }

  .article-author {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .featured-image {
    width: 100%;
    height: auto;
    max-height: 500px;
    object-fit: cover;
    border-radius: 12px;
    margin-top: 1rem;
  }

  .blog-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--text-primary);
  }

  .blog-content :global(h2) {
    font-size: 2rem;
    margin: 3rem 0 1.5rem;
    border-bottom: 2px solid var(--border-subtle);
    padding-bottom: 0.5rem;
  }

  .blog-content :global(h3) {
    font-size: 1.5rem;
    margin: 2.5rem 0 1rem;
  }

  .blog-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .blog-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .blog-content :global(pre) {
    background: #1e1e1e;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid var(--border-subtle);
  }

  .blog-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.925em;
  }

  .blog-content :global(:not(pre) > code) {
    background: var(--bg-elevated);
    color: var(--accent-primary);
    padding: 0.2em 0.4em;
    border-radius: 4px;
  }

  .blog-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .blog-content :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .ai-image-prompt {
    margin-top: 4rem;
    padding: 2rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-medium);
    border-radius: 12px;
  }

  .ai-image-prompt h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .ai-image-prompt pre {
    background: var(--bg-primary);
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
  }

  .tools {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-top: 1rem;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
  }

  .resume-banner {
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }

  .resume-banner p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 1rem;
    }

    .blog-header h1 {
      font-size: 1.75rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .blog-content {
      font-size: 1rem;
    }

    .blog-content :global(h2) {
      font-size: 1.5rem;
      margin: 2rem 0 1rem;
    }

    .blog-content :global(h3) {
      font-size: 1.25rem;
    }

    .blog-content :global(pre) {
      padding: 1rem;
      font-size: 0.875rem;
    }
  }
</style>
