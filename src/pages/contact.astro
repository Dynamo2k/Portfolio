---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import ResumeDownload from '../components/ResumeDownload.astro';
import { SOCIAL_LINKS } from '../utils/constants';
---

<BaseLayout title="Contact" description="Get in touch with Rana Uzair Ahmad for cybersecurity opportunities and collaborations">
  <section class="pt-24 pb-16">
    <div class="container-custom">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">Get in Touch</h1>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Let's discuss cybersecurity opportunities and collaborations
        </p>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
        <!-- Contact Form -->
        <div>
          <h2 class="text-xl font-bold text-text-primary mb-6">Send Me a Message</h2>
          <ContactForm />
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <!-- Professional Links -->
          <div>
            <h2 class="text-xl font-bold text-text-primary mb-6">Contact Information</h2>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-primary" aria-hidden="true">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-text-muted">Email</p>
                  <a href={`mailto:${SOCIAL_LINKS.email}`} class="text-text-primary no-underline hover:text-accent-primary text-sm">
                    {SOCIAL_LINKS.email}
                  </a>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-primary" aria-hidden="true">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-text-muted">Location</p>
                  <p class="text-text-primary text-sm">Islamabad, Pakistan</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Profiles -->
          <div>
            <h3 class="text-lg font-semibold text-text-primary mb-4">Social & Professional Profiles</h3>
            <div class="space-y-3">
              <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-secondary hover:text-accent-primary transition-colors no-underline text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                GitHub — github.com/Dynamo2k1 (34+ repos)
              </a>
              <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-secondary hover:text-accent-primary transition-colors no-underline text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
              <a href={SOCIAL_LINKS.tryhackme} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-secondary hover:text-accent-primary transition-colors no-underline text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                  <line x1="8" y1="21" x2="16" y2="21"></line>
                  <line x1="12" y1="17" x2="12" y2="21"></line>
                </svg>
                TryHackMe — Top 4%
              </a>
              <a href={SOCIAL_LINKS.hackthebox} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-secondary hover:text-accent-primary transition-colors no-underline text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                  <line x1="8" y1="21" x2="16" y2="21"></line>
                  <line x1="12" y1="17" x2="12" y2="21"></line>
                </svg>
                HackTheBox — Top 900
              </a>
              <a href={SOCIAL_LINKS.blog} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-secondary hover:text-accent-primary transition-colors no-underline text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                  <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                </svg>
                Blog — CipherVanguard
              </a>
              <a href={SOCIAL_LINKS.instagram} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-secondary hover:text-accent-primary transition-colors no-underline text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
                Instagram — @ra.na_uzair_ahmad
              </a>
            </div>
          </div>

          <!-- Availability -->
          <div class="card">
            <h3 class="text-lg font-semibold text-text-primary mb-3">Availability</h3>
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-success" aria-hidden="true"></span>
                <span class="text-text-secondary text-sm">Open to full-time opportunities</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-success" aria-hidden="true"></span>
                <span class="text-text-secondary text-sm">Available for freelance security consulting</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-success" aria-hidden="true"></span>
                <span class="text-text-secondary text-sm">Interested in security research collaborations</span>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-accent-primary/10">
              <p class="text-text-muted text-xs">Response Time: Usually within 24-48 hours</p>
              <p class="text-text-muted text-xs">Timezone: PKT (UTC+5)</p>
            </div>
          </div>

          <!-- PGP Key -->
          <div class="card">
            <h3 class="text-lg font-semibold text-text-primary mb-3">Secure Communication</h3>
            <p class="text-text-secondary text-sm mb-3">
              For encrypted communication, use my PGP public key.
            </p>
            <a
              href="/assets/pgp/public-key.asc"
              download
              class="btn-secondary no-underline text-sm"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
              </svg>
              Download Public Key (.asc)
            </a>
          </div>

          <!-- Resume Download -->
          <div class="card text-center">
            <h3 class="text-lg font-semibold text-text-primary mb-2">Want to know more about my background?</h3>
            <p class="text-text-secondary text-sm mb-4">Download my resume for a comprehensive overview.</p>
            <ResumeDownload variant="primary" />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
