---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE, EXPERIENCE, SKILLS, CERTIFICATIONS } from '../utils/constants';
---

<BaseLayout title={`Resume | ${SITE.author}`} description="Professional resume and qualifications">
  <div class="page-container">
    <header class="page-header">
      <h1>Resume</h1>
      <p>{SITE.headline}</p>
      <a href={SITE.resumeFile} download class="btn-primary">↓ Download Full Resume (PDF)</a>
    </header>

    <section class="resume-section">
      <h2>Professional Experience</h2>
      {EXPERIENCE.map((exp) => (
        <div class="resume-item">
          <div class="resume-item-header">
            <div>
              <h3>{exp.title}</h3>
              <span class="company">{exp.company}</span>
            </div>
            <span class="period">{exp.period}</span>
          </div>
          <ul>
            {exp.description.map((desc) => (
              <li>{desc}</li>
            ))}
          </ul>
          {exp.tech.length > 0 && (
            <div class="tech-tags">
              {exp.tech.map((t) => (
                <span class="tag">{t}</span>
              ))}
            </div>
          )}
        </div>
      ))}
    </section>

    <section class="resume-section">
      <h2>Technical Skills</h2>
      <div class="skills-grid">
        {Object.values(SKILLS).map((skill) => (
          <div class="skill-group">
            <h3>{skill.title}</h3>
            <p>{skill.items.join(' • ')}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="resume-section">
      <h2>Certifications</h2>
      <div class="certs-list">
        {CERTIFICATIONS.map((cert) => (
          <a href={cert.file} target="_blank" rel="noopener noreferrer" class="cert-item">
            <span class="cert-name">{cert.name}</span>
            <span class="cert-year">{cert.year}</span>
          </a>
        ))}
      </div>
    </section>

    <section class="download-section">
      <h2>Get the Full Resume</h2>
      <p>Download my complete resume with detailed project descriptions and references.</p>
      <a href={SITE.resumeFile} download class="btn-primary">↓ Download Resume (PDF)</a>
    </section>
  </div>
</BaseLayout>

<style>
  .page-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    text-align: center;
    padding: 3rem 0;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: var(--text-heading);
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--accent-primary);
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .resume-section {
    margin-bottom: 3rem;
  }

  .resume-section h2 {
    color: var(--text-heading);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .resume-item {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
  }

  .resume-item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .resume-item h3 {
    color: var(--text-heading);
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .company {
    color: var(--accent-primary);
    font-size: 0.95rem;
  }

  .period {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .resume-item ul {
    list-style: none;
    padding: 0;
  }

  .resume-item li {
    color: var(--text-secondary);
    font-size: 0.9rem;
    padding: 0.3rem 0;
    padding-left: 1.25rem;
    position: relative;
  }

  .resume-item li::before {
    content: '▸';
    color: var(--accent-primary);
    position: absolute;
    left: 0;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.75rem;
  }

  .tag {
    background: var(--bg-hover);
    color: var(--text-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .skill-group {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 1.25rem;
  }

  .skill-group h3 {
    color: var(--text-heading);
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }

  .skill-group p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .certs-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cert-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    padding: 1rem 1.25rem;
    text-decoration: none;
    transition: all 200ms ease;
  }

  .cert-item:hover {
    border-color: var(--accent-primary);
  }

  .cert-name {
    color: var(--text-primary);
    font-size: 0.95rem;
  }

  .cert-year {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .download-section {
    text-align: center;
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: 12px;
    padding: 3rem 2rem;
  }

  .download-section h2 {
    border: none;
    padding: 0;
    color: var(--text-heading);
    margin-bottom: 0.75rem;
  }

  .download-section p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .resume-item-header {
      flex-direction: column;
    }
  }
</style>
