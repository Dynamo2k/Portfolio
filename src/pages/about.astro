---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE, SKILLS, EXPERIENCE, CERTIFICATIONS, CTF_ACHIEVEMENTS, COMPETITION_WINS, SOCIAL_LINKS } from '../utils/constants';
---

<BaseLayout title={`About | ${SITE.author}`} description="About Rana Uzair Ahmad - Cyber Security Engineer, Penetration Tester, and Security Researcher">
  <div class="page-container">
    <header class="page-header">
      <h1>About Me</h1>
      <p class="headline">{SITE.headline}</p>
    </header>

    <section class="bio-section">
      <div class="bio-content">
        <h2>Professional Summary</h2>
        <p>
          I am a dedicated Cyber Security Engineer specializing in penetration testing,
          vulnerability assessment, and security tool development. Currently working as a
          Penetration Tester at ZeroxInnovation, I have extensive experience in both offensive
          and defensive security operations.
        </p>
        <p>
          Pursuing my BS in Cyber Security at Air University, Islamabad, I combine academic
          knowledge with hands-on experience from real-world security operations. I have
          developed 34+ open-source security tools and consistently rank in the top percentiles
          on platforms like TryHackMe (Top 4%) and HackTheBox (Top 900). Passionate about
          offensive security, CTF competitions, and building innovative security solutions.
        </p>
      </div>
    </section>

    <section class="experience-section">
      <h2>Experience</h2>
      <div class="timeline">
        {EXPERIENCE.map((exp) => (
          <div class="timeline-item">
            <div class="timeline-header">
              <h3>{exp.title}</h3>
              <span class="company">{exp.company}</span>
              <span class="period">{exp.period}</span>
            </div>
            <ul class="timeline-details">
              {exp.description.map((desc) => (
                <li>{desc}</li>
              ))}
            </ul>
            {exp.tech.length > 0 && (
              <div class="tech-tags">
                {exp.tech.map((t) => (
                  <span class="tag">{t}</span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </section>

    <section class="skills-section">
      <h2>Skills & Expertise</h2>
      <div class="skills-grid">
        {Object.values(SKILLS).map((skill) => (
          <div class="skill-category">
            <h3>{skill.title}</h3>
            <div class="skill-items">
              {skill.items.map((item) => (
                <span class="skill-tag">{item}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="certs-section">
      <h2>Certifications</h2>
      <div class="certs-grid">
        {CERTIFICATIONS.map((cert) => (
          <a href={cert.file} target="_blank" rel="noopener noreferrer" class="cert-card">
            <span class="cert-year">{cert.year}</span>
            <h3>{cert.name}</h3>
            <span class="cert-view">View Certificate ‚Üí</span>
          </a>
        ))}
      </div>
    </section>

    <section class="ctf-section">
      <h2>CTF Achievements</h2>
      <div class="achievements-grid">
        {CTF_ACHIEVEMENTS.map((ctf) => (
          <a href={ctf.link} target="_blank" rel="noopener noreferrer" class="achievement-card">
            <h3>{ctf.platform}</h3>
            <span class="achievement-value">{ctf.achievement}</span>
            <p>{ctf.details}</p>
          </a>
        ))}
      </div>
      <div class="competition-wins">
        <h3>Competition Wins</h3>
        {COMPETITION_WINS.map((win) => (
          <div class="win-item">üèÜ {win}</div>
        ))}
      </div>
    </section>

    <section class="connect-section">
      <h2>Let's Connect</h2>
      <p>I'm always open to discussing cybersecurity, collaborating on projects, or exploring new opportunities.</p>
      <div class="connect-buttons">
        <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="btn-secondary">GitHub</a>
        <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="btn-secondary">LinkedIn</a>
        <a href={`mailto:${SOCIAL_LINKS.email}`} class="btn-primary">Email Me</a>
        <a href={SITE.resumeFile} download class="btn-primary">Download Resume</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .page-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    text-align: center;
    padding: 3rem 0;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: var(--text-heading);
    margin-bottom: 0.5rem;
  }

  .headline {
    color: var(--accent-primary);
    font-size: 1.2rem;
  }

  section {
    margin-bottom: 3rem;
  }

  section h2 {
    color: var(--text-heading);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .bio-content p {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .timeline-item {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
  }

  .timeline-header h3 {
    color: var(--text-heading);
    font-size: 1.15rem;
    margin-bottom: 0.25rem;
  }

  .company {
    color: var(--accent-primary);
    font-size: 0.95rem;
    display: block;
  }

  .period {
    color: var(--text-muted);
    font-size: 0.85rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .timeline-details {
    list-style: none;
    padding: 0;
  }

  .timeline-details li {
    color: var(--text-secondary);
    font-size: 0.9rem;
    padding: 0.3rem 0;
    padding-left: 1.25rem;
    position: relative;
  }

  .timeline-details li::before {
    content: '‚ñ∏';
    color: var(--accent-primary);
    position: absolute;
    left: 0;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.75rem;
  }

  .tag, .skill-tag {
    background: var(--bg-hover);
    color: var(--text-secondary);
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .skill-category {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .skill-category h3 {
    color: var(--text-heading);
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .skill-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .certs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .cert-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 1.25rem;
    text-decoration: none;
    transition: all 300ms ease;
    display: block;
  }

  .cert-card:hover {
    border-color: var(--accent-primary);
    transform: translateY(-2px);
  }

  .cert-year {
    color: var(--text-muted);
    font-size: 0.8rem;
  }

  .cert-card h3 {
    color: var(--text-heading);
    font-size: 0.95rem;
    margin: 0.5rem 0;
  }

  .cert-view {
    color: var(--accent-primary);
    font-size: 0.85rem;
    font-weight: 600;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .achievement-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 300ms ease;
    display: block;
  }

  .achievement-card:hover {
    border-color: var(--accent-primary);
    transform: translateY(-2px);
  }

  .achievement-card h3 {
    color: var(--text-heading);
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .achievement-value {
    color: var(--accent-primary);
    font-size: 1.5rem;
    font-weight: 700;
    display: block;
    margin-bottom: 0.5rem;
  }

  .achievement-card p {
    color: var(--text-secondary);
    font-size: 0.85rem;
  }

  .competition-wins h3 {
    color: var(--text-heading);
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .win-item {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    padding: 0.75rem 1.25rem;
    color: var(--text-primary);
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
  }

  .connect-section {
    text-align: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 3rem 2rem;
  }

  .connect-section h2 {
    border: none;
    padding: 0;
  }

  .connect-section p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .connect-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .skills-grid, .certs-grid, .achievements-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
