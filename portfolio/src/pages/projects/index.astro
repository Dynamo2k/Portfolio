---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import ProjectFilter from '../../components/ProjectFilter.astro';
import ResumeDownload from '../../components/ResumeDownload.astro';
import { FEATURED_PROJECTS, ADDITIONAL_PROJECTS, SOCIAL_LINKS } from '../../utils/constants';

const allProjects = [...FEATURED_PROJECTS, ...ADDITIONAL_PROJECTS];
---

<BaseLayout title="Projects" description="Security projects and research from 34+ GitHub repositories">
  <section class="pt-24 pb-16">
    <div class="container-custom">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">Security Projects & Research</h1>
        <p class="text-text-secondary max-w-2xl mx-auto mb-6">
          Open-source security tools and research from 34+ GitHub repositories
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <ResumeDownload variant="primary" />
          <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="btn-secondary no-underline">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View All on GitHub
          </a>
        </div>
      </div>

      <!-- Filter -->
      <ProjectFilter />

      <!-- Featured Projects -->
      <h2 class="text-2xl font-bold text-text-primary mb-6">Featured Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        {FEATURED_PROJECTS.map((project) => (
          <div data-category={project.category} data-featured="true">
            <ProjectCard {...project} />
          </div>
        ))}
      </div>

      <!-- Additional Projects -->
      <h2 class="text-2xl font-bold text-text-primary mb-6">More Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        {ADDITIONAL_PROJECTS.map((project) => (
          <div data-category={project.category} data-featured="false">
            <div class="card group">
              <div class="flex items-start justify-between mb-2">
                <h3 class="text-lg font-semibold text-text-primary group-hover:text-accent-primary transition-colors">
                  {project.name}
                </h3>
              </div>
              <p class="text-text-secondary text-sm mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tech.map((t) => (
                  <span class="text-xs px-2 py-1 bg-bg-elevated rounded text-text-muted font-mono">{t}</span>
                ))}
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3 text-text-muted text-sm">
                  {project.stars && project.stars > 0 && (
                    <span class="flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                      </svg>
                      {project.stars}
                    </span>
                  )}
                  {project.forks && project.forks > 0 && (
                    <span class="flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <circle cx="12" cy="18" r="3"></circle>
                        <circle cx="6" cy="6" r="3"></circle>
                        <circle cx="18" cy="6" r="3"></circle>
                        <path d="M18 9v1a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V9"></path>
                        <path d="M12 12v3"></path>
                      </svg>
                      {project.forks}
                    </span>
                  )}
                </div>
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-text-secondary hover:text-accent-primary no-underline transition-colors"
                >
                  GitHub →
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- GitHub Section -->
      <div class="card text-center max-w-2xl mx-auto mb-12">
        <h2 class="text-2xl font-bold text-text-primary mb-4">Explore All Projects</h2>
        <div class="grid grid-cols-3 gap-4 mb-6">
          <div>
            <div class="text-2xl font-bold text-accent-primary">34+</div>
            <div class="text-text-muted text-sm">Repositories</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-accent-primary">50+</div>
            <div class="text-text-muted text-sm">Total Stars</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-accent-primary">7</div>
            <div class="text-text-muted text-sm">Languages</div>
          </div>
        </div>
        <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="btn-primary no-underline">
          View All on GitHub →
        </a>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <h2 class="text-2xl font-bold text-text-primary mb-4">Interested in collaboration?</h2>
        <div class="flex flex-wrap gap-4 justify-center">
          <ResumeDownload variant="primary" />
          <a href="/contact/" class="btn-secondary no-underline">Contact Me</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
