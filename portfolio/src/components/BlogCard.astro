---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  readTime: string;
  slug: string;
  category: string;
}

const { title, excerpt, date, readTime, slug, category } = Astro.props;
---

<article class="card group">
  <div class="flex items-center gap-2 mb-3">
    <span class="text-xs px-2 py-1 bg-accent-primary/10 text-accent-primary rounded font-medium">
      {category}
    </span>
    <span class="text-text-muted text-xs">{readTime}</span>
  </div>
  <h3 class="text-lg font-semibold text-text-primary mb-2 group-hover:text-accent-primary transition-colors">
    <a href={`/blog/${slug}/`} class="no-underline text-inherit hover:text-accent-primary">
      {title}
    </a>
  </h3>
  <p class="text-text-secondary text-sm mb-4 line-clamp-3">{excerpt}</p>
  <div class="flex items-center justify-between">
    <time class="text-text-muted text-xs" datetime={date}>{date}</time>
    <a href={`/blog/${slug}/`} class="text-sm text-accent-primary no-underline font-medium hover:underline">
      Read More â†’
    </a>
  </div>
</article>
