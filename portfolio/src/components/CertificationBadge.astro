---
interface Props {
  name: string;
  year: string;
  file?: string;
}

const { name, year, file } = Astro.props;
---

<div class="card flex items-center gap-4 p-4">
  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-accent-primary/10 flex items-center justify-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-primary" aria-hidden="true">
      <circle cx="12" cy="8" r="7"></circle>
      <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
    </svg>
  </div>
  <div class="flex-grow">
    <h4 class="text-sm font-semibold text-text-primary">{name}</h4>
    <p class="text-text-muted text-xs">{year}</p>
  </div>
  {file && (
    <a
      href={file}
      target="_blank"
      rel="noopener noreferrer"
      class="text-accent-primary hover:text-accent-secondary transition-colors flex-shrink-0 no-underline"
      aria-label={`View ${name} certificate`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </a>
  )}
</div>
