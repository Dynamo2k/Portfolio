---
import { SITE } from '../utils/constants';

interface Props {
  variant?: 'primary' | 'secondary' | 'large';
  class?: string;
}

const { variant = 'primary', class: className = '' } = Astro.props;

const baseClasses = 'no-underline';
const variantClasses = {
  primary: 'btn-download',
  secondary: 'btn-secondary',
  large: 'btn-download text-lg px-8 py-4',
};
---

<a
  href={SITE.resumeFile}
  download="Rana_Uzair_Ahmad_Resume.pdf"
  class:list={[baseClasses, variantClasses[variant], className]}
  aria-label="Download Resume PDF"
>
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
    <polyline points="7 10 12 15 17 10"></polyline>
    <line x1="12" y1="15" x2="12" y2="3"></line>
  </svg>
  <span>Download Resume</span>
</a>
