---
import BaseLayout from './BaseLayout.astro';
import ResumeDownload from '../components/ResumeDownload.astro';

interface Props {
  title: string;
  tagline: string;
  tech: string[];
  category: string;
  github: string;
  stars?: number;
}

const { title, tagline, tech, category, github, stars } = Astro.props;
---

<BaseLayout title={title} description={tagline}>
  <article class="pt-24 pb-16">
    <div class="container-custom max-w-4xl mx-auto">
      <!-- Project Header -->
      <header class="mb-12">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class:list={[
            'tag text-sm',
            category === 'offensive' ? 'tag-offensive' : category === 'defensive' ? 'tag-defensive' : 'tag-development'
          ]}>
            {category.charAt(0).toUpperCase() + category.slice(1)}
          </span>
          {stars !== undefined && stars > 0 && (
            <span class="flex items-center gap-1 text-text-muted text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
              </svg>
              {stars} stars
            </span>
          )}
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-text-primary mb-2">{title}</h1>
        <p class="text-xl text-accent-primary mb-4">{tagline}</p>
        <div class="flex flex-wrap gap-2 mb-6">
          {tech.map((t) => (
            <span class="text-sm px-3 py-1 bg-bg-elevated rounded-lg text-text-muted font-mono">{t}</span>
          ))}
        </div>
        <div class="flex flex-wrap gap-4">
          <ResumeDownload variant="primary" />
          <a href={github} target="_blank" rel="noopener noreferrer" class="btn-secondary no-underline">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        </div>
      </header>

      <!-- Project Content -->
      <div class="prose prose-invert prose-lg max-w-none
        prose-headings:text-text-primary prose-headings:font-semibold
        prose-p:text-text-secondary prose-p:leading-relaxed
        prose-a:text-accent-primary prose-a:no-underline hover:prose-a:underline
        prose-strong:text-text-primary
        prose-code:text-accent-primary prose-code:bg-bg-elevated prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:font-mono
        prose-pre:bg-bg-secondary prose-pre:border prose-pre:border-accent-primary/10 prose-pre:rounded-xl
        prose-li:text-text-secondary
        prose-blockquote:border-accent-primary prose-blockquote:text-text-secondary
        prose-img:rounded-xl
        prose-hr:border-accent-primary/20
      ">
        <slot />
      </div>

      <!-- Project Footer -->
      <footer class="mt-12 pt-8 border-t border-accent-primary/10">
        <div class="card text-center">
          <p class="text-text-primary font-semibold mb-2">Want to hire me?</p>
          <p class="text-text-secondary text-sm mb-4">Download my resume to learn more about my experience and projects.</p>
          <ResumeDownload variant="primary" />
        </div>
        <div class="flex justify-center gap-4 mt-6">
          <a href="/projects/" class="text-accent-primary no-underline hover:underline">‚Üê Back to Projects</a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>
